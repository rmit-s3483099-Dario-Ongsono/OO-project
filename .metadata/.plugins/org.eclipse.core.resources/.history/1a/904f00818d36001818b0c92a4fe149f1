package controller;

import javafx.scene.paint.Color;
import model.Role;
import model.Tile;
import view.Board;

public class MoveDetector {
	private Role heroSelected;
	private Tile[][] tile;

	public MoveDetector(Role hero, Tile[][] tile){
		this.heroSelected = hero;
		this.tile = tile;
	}

	public void validTile(){
		int x = heroSelected.getInitX();
		int y = heroSelected.getInitY();

		if(tile[x][y].hasHero()){
			if(x - heroSelected.getRole().moveDir >= 0 || y - heroSelected.getRole().moveDir >= 0){
				tile[x - heroSelected.getRole().moveDir][y].setFill(Color.GREEN);
				tile[x - heroSelected.getRole().moveDir][y].setReady(true);

				tile[x][y - heroSelected.getRole().moveDir].setFill(Color.GREEN);
				tile[x][y - heroSelected.getRole().moveDir].setReady(true);
			}

			if(x + heroSelected.getRole().moveDir <= Board.WIDTH || y + heroSelected.getRole().moveDir <= Board.HEIGHT){
				tile[x + heroSelected.getRole().moveDir][y].setFill(Color.GREEN);
				tile[x + heroSelected.getRole().moveDir][y].setReady(true);

				tile[x][y + heroSelected.getRole().moveDir].setFill(Color.GREEN);
				tile[x][y + heroSelected.getRole().moveDir].setReady(true);
			}





		}
	}


}
