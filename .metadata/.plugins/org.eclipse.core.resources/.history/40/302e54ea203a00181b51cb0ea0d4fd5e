package gameController;

import gameView.Board;
import gameView.GameFrame;
import gameView.TileView;
import javafx.scene.Group;

public class Controller {
	private Board gameBoard;
	private TileView tileView;
	private Group tileGroup;

	private final int tile_Size = 50;
	private final int board_Width = 12;
	private final int board_Height = 14;

	public Controller(){
		tileGroup = createTilesView();
		gameBoard = new Board(tile_Size, board_Width, board_Height, tileGroup);
	}



	public Group createTilesView(){
		Group tileGroup = new Group();

		for(int x = 0; x < board_Width; x++){
			for(int y = 0; y < board_Height; y++){
				TileView tileView = new TileView(x, y, tile_Size);
				tileGroup.getChildren().add(tileView);
			}
		}
		return tileGroup;
	}



	public Board getGameBoard(){
		return gameBoard;
	}

}
