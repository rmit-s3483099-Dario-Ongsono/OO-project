package controller;

import javafx.scene.paint.Color;
import model.Role;
import model.Tile;
import view.Board;

public class MoveDetector {
	private Role heroSelected;
	private Tile[][] tile;

	public MoveDetector(Role hero, Tile[][] tile){
		this.heroSelected = hero;
		this.tile = tile;
	}

	public void validTile(){
		int x = heroSelected.getInitX();
		int y = heroSelected.getInitY();
		int xmove = heroSelected.getRole().XMOVE;
		int ymove = heroSelected.getRole().YMOVE;

		if(tile[x][y].hasHero()){
			if(x - xmove >= 0 || y - ymove >= 0){
				tile[x - xmove][y].setFill(Color.GREEN);
				tile[x - xmove][y].setReady(true);

				tile[x][y - ymove].setFill(Color.GREEN);
				tile[x][y - ymove].setReady(true);
			}

			if(x + xmove <= Board.WIDTH || y + ymove <= Board.HEIGHT){
				tile[x + xmove][y].setFill(Color.GREEN);
				tile[x + xmove][y].setReady(true);

				tile[x][y + ymove].setFill(Color.GREEN);
				tile[x][y + ymove].setReady(true);
			}
		}
	}


}
