package controller;

import javafx.scene.paint.Color;
import model.Role;
import model.Tile;
import view.Board;

public class MoveDetector {
	private Role heroSelected;
	private Tile[][] tile;

	public MoveDetector(Role hero, Tile[][] tile){
		this.heroSelected = hero;
		this.tile = tile;
	}

	public void validTile(){
		int x = heroSelected.getInitX();
		int y = heroSelected.getInitY();
		int Hmove = heroSelected.getRole().HMOVE;
		int Vmove = heroSelected.getRole().VMOVE;

		if(tile[x][y].hasHero()){
			if(x - Hmove >= 0 || y - Hmove >= 0){
				tile[x - Hmove][y].setFill(Color.GREEN);
				tile[x - Hmove][y].setReady(true);

				tile[x][y - Hmove].setFill(Color.GREEN);
				tile[x][y - Hmove].setReady(true);
			}

			if(x + Hmove <= Board.WIDTH || y + Hmove <= Board.HEIGHT){
				tile[x + Hmove][y].setFill(Color.GREEN);
				tile[x + Hmove][y].setReady(true);

				tile[x][y + Hmove].setFill(Color.GREEN);
				tile[x][y + Hmove].setReady(true);
			}
		}
	}


}
