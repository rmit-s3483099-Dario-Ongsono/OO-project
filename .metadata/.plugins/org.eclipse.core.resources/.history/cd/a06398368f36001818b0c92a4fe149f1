package controller;

import javafx.scene.paint.Color;
import model.Role;
import model.Tile;
import view.Board;

public class MoveDetector {
	private Role heroSelected;
	private Tile[][] tile;

	public MoveDetector(Role hero, Tile[][] tile){
		this.heroSelected = hero;
		this.tile = tile;
	}

	public void validTile(){
		int x = heroSelected.getInitX();
		int y = heroSelected.getInitY();
		int Hmove = heroSelected.getRole().HMOVE;
		int Dmove = heroSelected.getRole().DMOVE;

		if(tile[x][y].hasHero()){
			showHorizontalTile(x, y, Hmove);
			show
		}
	}

	public void showHorizontalTile(int x, int y, int h){
		if(x - h >= 0 || y - h >= 0){
			tile[x - h][y].setFill(Color.GREEN);
			tile[x - h][y].setReady(true);

			tile[x][y - h].setFill(Color.GREEN);
			tile[x][y - h].setReady(true);
		}

		if(x + h <= Board.WIDTH || y + h <= Board.HEIGHT){
			tile[x + h][y].setFill(Color.GREEN);
			tile[x + h][y].setReady(true);

			tile[x][y + h].setFill(Color.GREEN);
			tile[x][y + h].setReady(true);
		}
	}

}
