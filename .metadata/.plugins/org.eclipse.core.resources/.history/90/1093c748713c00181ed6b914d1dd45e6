	public TileView(Tile tile){
		super(tile.getSideSize(), tile.getSideSize());
		this.tile = tile;
		this.relocate(tile.getX() * tile.getSideSize(), tile.getY() * tile.getSideSize());
		this.setFill(Color.valueOf("#feb"));
		this.setStroke(Color.BLACK);
	}


	public Tile getTile(){
		return tile;
	}
	
